{
  "id": "com.mahn.tuya-doorbell",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Tuya doorbell local API"
  },
  "description": {
    "en": "connects the tuya doorbell to the homey by using the device api, so no cloud connection and a lot faster response"
  },
  "category": [
    "security"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Jurgen Mahn",
    "email": "jurgen@mahn.it"
  },
  "brandColor": "#000000",
  "drivers": [
    {
      "id": "VideoDoorbell",
      "name": {
        "en": "Video Doorbell"
      },
      "class": "doorbell",
      "capabilities": [
        "onoff",
        "button",
        "alarm_motion"
      ],
      "capabilitiesOptions": {
        "button": {
          "title": {
            "en": "Doorbell Button"
          }
        },
        "alarm_motion": {
          "title": {
            "en": "Motion Detection"
          }
        }
      },
      "platforms": ["local"],
      "connectivity": ["lan"],
      "images": {
        "small": "/drivers/VideoDoorbell/assets/images/small.png",
        "large": "/drivers/VideoDoorbell/assets/images/large.png"
      },
      "pair": [
        {
          "id": "pair_method",
          "navigation": {
            "next": "manual_settings"
          }
        },
        {
          "id": "manual_settings",
          "navigation": {
            "next": "list_devices"
          }
        },
        {
          "id": "auto_search",
          "navigation": {
            "next": "list_devices"
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Device Settings"
          },
          "children": [
            {
              "id": "deviceId",
              "type": "text",
              "label": {
                "en": "Device ID"
              }
            },
            {
              "id": "localKey",
              "type": "text",
              "label": {
                "en": "Local Key"
              }
            },
            {
              "id": "ipAddress",
              "type": "text",
              "label": {
                "en": "IP Address"
              }
            },
            {
              "id": "port",
              "type": "number",
              "label": {
                "en": "Port"
              },
              "value": 6668
            }
          ]
        }
      ]
    }
  ]
}
