{
  "id": "com.mahn.tuya-doorbell",
  "version": "1.0.0",
  "compose": false,
  "sdk": 3,
  "compatibility": ">=12.2.0",
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Local Tuya Video Doorbell for Homey Pro"
  },
  "description": {
    "en": "Take full control of your Tuya-compatible video doorbell directly through your Homey Pro hub - no cloud required! This app enables local integration of your video doorbell, giving you faster response times and complete privacy by eliminating the need for Tuya's cloud services."
  },
  "category": [
    "security"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png"
  },
  "author": {
    "name": "Jurgen Mahn",
    "email": "jurgen@mahn.it"
  },
  "brandColor": "#000000",
  "flow": {
    "triggers": [
      {
        "title": {
          "en": "Doorbell Connection restored"
        },
        "hint": {
          "en": "Doorbell availab le"
        },
        "id": "doorbell_connected"
      },      
      {
        "title": {
          "en": "Doorbell Connection lost"
        },
        "hint": {
          "en": "Doorbell unreachable"
        },
        "id": "doorbell_disconnected"
      },
      {
        "title": {
          "en": "Doorbell is pressed"
        },
        "hint": {
          "en": "Someone is at the door"
        },
        "tokens": [],
        "id": "doorbell_pressed"
      },
      {
        "title": {
          "en": "Motion is detected"
        },
        "hint": {
          "en": "Doorbell detected motion within the selected area"
        },
        "tokens": [],
        "id": "motion_detected"
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Tuyavideodoorbell"
      },
      "class": "camera",
      "capabilities": [
        "button",
        "alarm_motion"
      ],
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/Tuyavideodoorbell/assets/images/small.png",
        "large": "/drivers/Tuyavideodoorbell/assets/images/large.png"
      },
      "pair": [
        {
          "id": "start",
          "navigation": {
            "next": "list_devices"
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices",
            "prev": "start"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices",
          "navigation": {
            "next": "done",
            "prev": "list_devices"
          }
        },
        {
          "id": "done",
          "template": "done"
        },
        {
          "id": "loading",
          "template": "loading"
        }                     
      ],
      "id": "Tuyavideodoorbell"
    }
  ],
  "capabilities": {
    "alarm_motion": {
      "type": "boolean",
      "title": {
        "en": "Motion Detection"
      },
      "getable": true,
      "setable": false,
      "insights": true,
      "uiComponent": "sensor"
    },
    "button": {
      "type": "boolean",
      "title": {
        "en": "Doorbell Button"
      },
      "getable": true,
      "setable": false,
      "insights": true
    }
  }
}