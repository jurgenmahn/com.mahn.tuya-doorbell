{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.mahn.tuya-doorbell",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Tuya doorbell local API"
  },
  "description": {
    "en": "connects the tuya doorbell to the homey by using the device api, so no cloud connection and a lot faster response"
  },
  "category": [
    "security"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Jurgen Mahn",
    "email": "jurgen@mahn.it"
  },
  "flow": {
    "triggers": [
      {
        "id": "doorbell_pressed",
        "title": {
          "en": "Doorbell Pressed"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VideoDoorbell"
          }
        ]
      },
      {
        "id": "motion_detected",
        "title": {
          "en": "Motion Detected"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=VideoDoorbell"
          }
        ]
      }
    ]
  },
    {
      "id": "VideoDoorbell",
      "name": {
        "en": "Video Doorbell"
      },
      "class": "doorbell",
      "icon": "/assets/icon.svg",
      "capabilities": [
        "onoff",
        "button",
        "alarm_motion"
      ],
      "connectivity": [
        "lan"
      ],
      "pair": [
        {
          "id": "start",
          "template": "start"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ]
}
