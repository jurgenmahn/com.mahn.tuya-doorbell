{
  "id": "com.mahn.tuya-doorbell",
  "version": "1.0.0",
  "compose": false,
  "sdk": 3,
  "compatibility": ">=12.2.0",
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Tuya doorbell via local API"
  },
  "description": {
    "en": "connects the tuya doorbell to the homey by using the device api, so no cloud connection and a lot faster response, but you need to have your local id and key"
  },
  "category": [
    "security"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Jurgen Mahn",
    "email": "jurgen@mahn.it"
  },
  "brandColor": "#000000",
  "flow": {
    "triggers": [
      {
        "title": {
          "en": "Connection is lost"
        },
        "hint": {
          "en": "Doorbell unreachable"
        },
        "id": "connection-is-lost"
      },
      {
        "title": {
          "en": "Doorbell is pressed"
        },
        "tokens": [],
        "id": "doorbell_pressed"
      },
      {
        "title": {
          "en": "Montion alarm is triggered"
        },
        "hint": {
          "en": "Motion detected"
        },
        "id": "montion-alarm-is-triggered"
      },
      {
        "title": {
          "en": "Motion is detected"
        },
        "tokens": [],
        "id": "motion_detected"
      },
      {
        "title": {
          "en": "When the doorbell main button is pressed"
        },
        "hint": {
          "en": "Someone is at the door"
        },
        "id": "when-the-doorbell-main-button-is-pressed"
      },
      {
        "title": {
          "en": "Device error occurred"
        },
        "hint": {
          "en": "The device reported an error state"
        },
        "id": "device_error"
      },
      {
        "title": {
          "en": "Video settings changed"
        },
        "tokens": [
          {
            "name": "settings",
            "type": "string",
            "title": {
              "en": "Settings"
            }
          }
        ],
        "id": "video_settings_changed"
      },
      {
        "title": {
          "en": "Volume changed"
        },
        "tokens": [
          {
            "name": "volume",
            "type": "number",
            "title": {
              "en": "Volume Level"
            }
          }
        ],
        "id": "volume_changed"
      },
      {
        "title": {
          "en": "Motion settings changed"
        },
        "tokens": [
          {
            "name": "settings",
            "type": "string",
            "title": {
              "en": "Settings"
            }
          }
        ],
        "id": "motion_settings_changed"
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Tuyavideodoorbell"
      },
      "class": "camera",
      "capabilities": [
        "button",
        "alarm_motion"
      ],
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/Tuyavideodoorbell/assets/images/small.png",
        "large": "/drivers/Tuyavideodoorbell/assets/images/large.png"
      },
      "pair": [
        {
          "id": "start",
          "navigation": {
            "next": "list_devices"
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices",
            "prev": "start"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices",
          "navigation": {
            "next": "done",
            "prev": "list_devices"
          }
        },
        {
          "id": "done",
          "template": "done"
        },
        {
          "id": "loading",
          "template": "loading"
        }                     
      ],
      "id": "Tuyavideodoorbell"
    }
  ],
  "capabilities": {
    "alarm_motion": {
      "type": "boolean",
      "title": {
        "en": "Motion Detection"
      },
      "getable": true,
      "setable": false,
      "insights": true,
      "uiComponent": "sensor"
    },
    "button": {
      "type": "boolean",
      "title": {
        "en": "Doorbell Button"
      },
      "getable": true,
      "setable": false,
      "insights": true
    }
  }
}